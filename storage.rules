rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // Refine with roles via callable function or Firestore check
    }
    match /{allPaths=**} {
      allow read: if true;
    }
  }
}


